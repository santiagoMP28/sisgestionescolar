<IfModule mod_rewrite.c>
  RewriteEngine On

  # Si la petición es un archivo existente, sirve ese archivo directamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirige todas las demás peticiones a index.php
  RewriteRule ^ index.php [QSA,L]

  # Opcionalmente, si querés manejar carpetas específicas
  # aunque realmente no hace falta porque la regla de arriba ya se encarga
  # RewriteRule ^admin/(.*)$ admin/$1 [L]
  # RewriteRule ^docentes/(.*)$ docentes/$1 [L]
  # RewriteRule ^estudiantes/(.*)$ estudiantes/$1 [L]
</IfModule>
